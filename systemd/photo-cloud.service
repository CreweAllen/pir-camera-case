[Unit]
Description=Scheduled photo capture and cloud upload service
After=network.target

[Service]
Type=oneshot
User=james
WorkingDirectory=/home/james/repos/Personal/pir-camera-case
Environment="PYTHONPATH=/home/james/repos/Personal/pir-camera-case"
Environment="BASE_URL=https://creweallen-function.azurewebsites.net"
EnvironmentFile=/home/james/repos/Personal/pir-camera-case/.env
ExecStart=/usr/bin/python3 /home/james/repos/Personal/pir-camera-case/scripts/cloud_scheduled.py

[Install]
WantedBy=multi-user.target
